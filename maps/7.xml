        <element name="startpos" type="rail"/>
        <element name="rail_1" type="rail"/>
        <element name="rail_2" type="rail"/>
        <element name="rail_3" type="rail"/>
        <element name="rail_4" type="rail"/>

        <element name="switch_1" type="switch"/>

